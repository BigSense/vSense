delimiter $$
drop function if exists `isnumeric` $$
create function `isnumeric` (s varchar(255)) returns int deterministic
begin
set @match =
   '^(([0-9+-.$]{1})|([+-]?[$]?[0-9]*(([.]{1}[0-9]*)|([.]?[0-9]+))))$';

return if(s regexp @match, 1, 0);
end $$

delimiter ;

GRANT EXECUTE ON PROCEDURE {{ database.name }}.isnumeric TO '{{ database.username }}'@'localhost'